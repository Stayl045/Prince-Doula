<header
	class="bg-gray-800 text-white">
	<div
		class="container mx-auto flex justify-between items-center p-4">
		<h1
			class="text-2xl font-bold">
			<a
				href="{{ url }}" class="hover:text-teal-400">
				Prince Doula
			</a>
		</h1>
		<nav>
			<ul
				class="flex space-x-4">
				{% for item in header_menu.items %}
					<li>
						<a
							href="{{ item.link }}" class="hover:text-teal-400">
							{{ item.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
	</div>
</header>
