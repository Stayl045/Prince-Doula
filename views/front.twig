{% extends "base.twig" %}

{% block content %}
	<!-- Hero Section -->
	{% include 'template-parts/main-hero.twig' with {
    title: 'Welcome to Prince Doula',
    description: 'Empowering your journey with expert care and support.',
    button_text: 'Learn More',
    button_url: '/about',
    background_image: background_image 
} %}

	<!-- Features Section -->
	<section
		class="py-16 bg-gray-100">
		<div
			class="container mx-auto text-center">
			<h2
				class="text-3xl md:text-4xl font-bold mb-12">
				Why Choose Us?
			</h2>
			<div
				class="grid grid-cols-1 md:grid-cols-3 gap-8">

				<!-- Feature 1 -->
				<div
					class="bg-white shadow-lg rounded-lg p-6">
					<h3
						class="text-xl font-semibold mb-4">
						Experienced Care
					</h3>
					<p>
						We have years of experience providing personalized care to expectant mothers and families.
					</p>
				</div>

				<!-- Feature 2 -->
				<div
					class="bg-white shadow-lg rounded-lg p-6">
					<h3
						class="text-xl font-semibold mb-4">
						Comprehensive Support
					</h3>
					<p>
						From prenatal visits to postpartum recovery, we are with you every step of the way.
					</p>
				</div>

				<!-- Feature 3 -->
				<div
					class="bg-white shadow-lg rounded-lg p-6">
					<h3
						class="text-xl font-semibold mb-4">
						Holistic Approach
					</h3>
					<p>
						We offer physical, emotional, and educational support tailored to your unique journey.
					</p>
				</div>

			</div>
		</div>
	</section>

	<!-- Call to Action Section -->
	<section
		class="py-20 bg-blue-600 text-white">
		<div
			class="container mx-auto text-center">
			<h2
				class="text-3xl md:text-4xl font-bold mb-6">
				Ready to Get Started?
			</h2>
			<p
				class="text-xl mb-8">
				Join countless families who have experienced expert doula support with us.
			</p>
			<a
				href="/contact"
				class="bg-white text-blue-600 font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-gray-100">
				Contact Us
			</a>
		</div>
	</section>

{% endblock %}
